<%= form_with(model: @answer, url: answers_path) do |form| %>
<div class="card-deck h2">
    <%@choices.each do |choice|%>
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mt-5 "><%= choice.question.question_text %></h3>
                <h5 class="card-text mt-5">
                    <% choice.choice_name.split(',').each do |option| %>
                        <div class="form-check text-center">
                            <%= check_box_tag 'answer[choices][]', option, false, class: 'form-check-input' %>
                            <label class="form-check-label" for="choice_<%= option.parameterize %>"><%= option %></label>
                        </div>
                    <% end %>
                </h5>
            </div>
        </div>
  <%end%>
</div>
<div class="mt-3">
    <%= form.submit 'Create Answer', class: 'btn btn-info ', id: 'answer_btn'%>
</div>
<%end%>


