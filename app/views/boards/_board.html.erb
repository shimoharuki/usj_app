<div class="container mt-5", style="height:100vh;">
  <div class="row">
    <% @boards.each do |board| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to board.title, board_path(board), class: 'navbar-brand mb-0 h1 text-info'  %></h5>
            <p class="card-text"><%= board.body[0, 20] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
  <div class="col-md-12">
    <!-- ページネーション -->
    <%= paginate @boards %>
  </div>
</div>
</div>
