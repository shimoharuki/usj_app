<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>質問編集</h1>
      <%= form_with model: @question, url: admin_question_path(@question), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :question_text %>
          <%= f.text_field :question_text, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :tag_list %>
            <%= f.text_area :tag_list, value: @question.tag_list.join(','), class: 'form-control', rows: 10 %>
        </div> 
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>