<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>アンケート詳細</h1>
      <div class="text-right mb-3">
        <%= link_to '編集', edit_admin_question_path(@question), class: 'btn btn-success' %>
        <%= link_to '削除', admin_question_path(@question), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Question.human_attribute_name(:id) %></th>
          <td><%= @question.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Question.human_attribute_name(:question_text) %></th>
          <td><%= @question.question_text %></td>
        </tr>
        <tr>
          <th scope="row"><%= Choice.human_attribute_name(:choice_name) %></th>
          <td>
            <% @choice.choice_name.split(',').each do |choice| %>
                <p><%= choice %></p>
            <% end %>
          </td>
        </tr>
        <tr>
            <th scope="row"><%= Question.human_attribute_name(:tag) %></th>
            <td><%= @question.tag_list %></td>
        </tr>
          <th scope="row"><%= Question.human_attribute_name(:created_at) %></th>
          <td><%= l @question.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>