<div class="container pt-3", style="height:77vh;">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">ユーザー情報</h1>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-info float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
      </table>
    </div>
  </div>
</div>